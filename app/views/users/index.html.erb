<h1>Users</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Opinion</th>
    <th></th>
  </tr>

  <% @users.each do |user| %>
  <tr>
    <td><%= image_tag user.get_profile_image("100x100") %></td>
    <td><%= user.name %></td>
    <td><%= link_to 'Show', user_path(user[:id]) %></td>
  </tr>
  <% end %>
</table>