<h2>User info</h2>
<%= form_with model: @user, local:true do |f| %>
  <div>
    <label for="inputName">Name</label>
    <br><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  </div>
  <div>
    <label for="inputImage">Image</label>
    <br><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  </div>
  <div>
    <label for="inputIntroduction">Introduction</label>
    <br><%= f.text_area :introduction %>
  </div>
  <%= f.submit "Update User" %>
<% end %>