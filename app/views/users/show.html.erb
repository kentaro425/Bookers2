<h1>Books</h1>
<p><%= link_to "プロフィール編集",edit_user_path(@user) %></p>
<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>

  <% @books.each do |book| %>
  <tr>
    <td>
      <%= link_to user_path(@user) do %>
        <%= image_tag @user.get_profile_image("100x100") %>
      <% end %>
    </td>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
  </tr>
  <% end %>
</table>